{
   "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "allowJs": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "jsx": "react-jsx",
      "sourceMap": true,
      "skipLibCheck": true
   },
   "include": [
      "./src/**/**/*.tsx"
   ]
}
